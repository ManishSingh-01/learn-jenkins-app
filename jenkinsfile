pipeline {
    agent any

    stages {
        stage('Hello') {
            docker{
                image 'node:18-aplphine'
                reusedNode true
            }
            steps {
                sh '''
                    ls -la
                    node --version
                    npm --version
                    npm ci
                    npm run build
                    ls -la
                '''
            }
        }
    }
}
